import SwiftUI

struct ContentView: View {
    @StateObject var vm = StoreViewModel()
    @State private var showRestock = false
    @State private var showSale = false
    @State private var showAddProduct = false
    @State private var selectedProduct: Product?

    var body: some View {
        NavigationView {
            List {
                ForEach(vm.products) { product in
                    HStack {
                        VStack(alignment: .leading) {
                            Text(product.name).font(.headline)
                            Text("庫存：\(product.stock)").font(.subheadline)
                        }
                        Spacer()
                        Text("$\(product.price)").bold()
                    }
                    .onTapGesture {
                        selectedProduct = product
                        showSale = true
                    }
                    .contextMenu {
                        Button("進貨") {
                            selectedProduct = product
                            showRestock = true
                        }
                        Button("銷售") {
                            selectedProduct = product
                            showSale = true
                        }
                    }
                }
                .onDelete { indexSet in
                    vm.deleteProduct(at: indexSet)
                }
            }
            .navigationTitle("福利社管理")
            .toolbar {
                ToolbarItemGroup(placement: .navigationBarTrailing) {
                    Button("新增商品") {
                        showAddProduct = true
                    }
                    NavigationLink("報表") {
                        ReportView(vm: vm)
                    }
                }
            }
            .sheet(isPresented: $showRestock) {
                if let product = selectedProduct {
                    RestockView(vm: vm, product: product)
                }
            }
            .sheet(isPresented: $showSale) {
                if let product = selectedProduct {
                    SaleView(vm: vm, product: product)
                }
            }
            .sheet(isPresented: $showAddProduct) {
                AddProductView(vm: vm)
            }
        }
    }
}
